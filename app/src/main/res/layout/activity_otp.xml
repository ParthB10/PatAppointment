<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="local.medstream.patappointment.otp">

    <Button
        android:id="@+id/btnresend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etotp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="48dp"
        android:background="@color/bg_view_otp"
        android:fontFamily="monospace"
        android:text="Resend"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Enter Your OTP Below"
        android:textAlignment="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="30sp"
        android:typeface="monospace"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvpuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvotp"
        android:fontFamily="monospace"
        android:text="Enter Your OTP Below"
        android:textAlignment="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="30sp"
        android:typeface="monospace"
        android:visibility="gone"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tvLotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="OTP"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_below="@+id/tvotp"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/etotp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLotp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="OTP"
        android:inputType="text|number"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/bnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_view_otp"
        android:fontFamily="monospace"
        android:text="Next"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/btnresend"
        android:layout_alignBottom="@+id/btnresend"
        android:layout_toRightOf="@+id/etotp"
        android:layout_toEndOf="@+id/etotp" />

    <AutoCompleteTextView
        android:id="@+id/tvdotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvpuid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="DOTP"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvdotp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvdotp"
        android:layout_marginBottom="49dp" />

</RelativeLayout>
