<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="local.medstream.patappointment.Register">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/etdname"
        android:hint="Enter Your Full Name"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="serif" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/etdcno"
        android:hint="Enter Your Mobile Number"
        android:layout_below="@id/etdname"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="phone"
        android:fontFamily="serif" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/etdemail"
        android:hint="Enter Your Email ID"
        android:layout_below="@id/etdcno"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="serif" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bnext"
        android:text="Next"
        android:layout_below="@id/etdemail"
        android:layout_marginTop="40dp"
        android:fontFamily="monospace"
        android:textSize="24sp"
        android:textAlignment="center"
        android:background="?android:attr/colorActivatedHighlight"
        android:textColor="@android:color/white" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="REGISTER TO MEDPAL"
    android:gravity="center_horizontal"
    android:textSize="30dp"
    android:id="@+id/tdv"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp"
    android:fontFamily="monospace" />
    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:id="@+id/progressBar"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tdvadid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bnext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30dp"
        android:visibility="invisible"
        tools:text="imei no" />

</RelativeLayout>
